@model Blog_jcf.Models.BlogPost

@{
    ViewBag.Title = "Details";
}

<h2 style="margin-top:80px">Details</h2>

<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">James Frost</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> <small>Posted on @Model.Created</small></p>
            @if (Model.Updated != null)
            {
            <p><span class="glyphicon glyphicon-time"></span> <small>Last update on @Model.Updated</small></p>
            }
            <hr>

            <!-- Preview Image -->
            @if (Model.MediaURL != null)
            {
            <img class="img-responsive" src="@Url.Content(Model.MediaURL)" alt="">
            }

            <hr>

            <!-- Post Content -->
            <p>@Html.Raw(Model.Body)</p>
            

            <hr>

            <!-- Blog Comments -->
            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                @using (Html.BeginForm("CreateComment", "BlogPosts", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PostId" value="@Model.Id"/>
                    <input name="Body" />
                    @*<div class="form-group">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>*@
                    <button type="submit" class="btn btn-primary">Submit</button>
                }
            </div>

            <hr>

            <!-- Posted Comments -->
            @foreach (var com in Model.Comments)
            {
            <!-- Comment -->
            <div class="media">
                @*<a class="pull-left" href="#">
                    <img class="media-object" src="http://placehold.it/64x64" alt="">
                </a>*@
                <div class="media-body">
                    <h4 class="media-heading">
                        Comment:
                        <small>added @com.Created</small>
                    </h4>
                    <p>@com.Body</p>

                    @Html.ActionLink("Edit Comment", "EditComments", new {id = com.ID }) |
                    @Html.ActionLink("Delete Comment", "DeleteComments", new { id = com.ID })
                </div>
            </div>
                }
                </div>
            </div>

        </div>

        <!-- Blog Sidebar Widgets Column -->
